@model Karaokedigital.Models.CustomerModel

@{
    ViewData["Title"] = "DeleteCustomer";
}

<h1>Delete Customer</h1>

<h3>Are you sure you want to delete this Customer?</h3>
<div>
    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "Customer has been deleted")
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Boss)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Boss)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Society)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Society)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PIvaFiscalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PIvaFiscalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
