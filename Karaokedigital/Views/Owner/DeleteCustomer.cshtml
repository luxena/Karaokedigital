        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        @if (Model != null)
        {
            <dd class="col-sm-10">
                <img class="rounded-circle" alt="@Html.DisplayFor(modelItem => Model.Society)" width="60" height="60" src="~/Images/Customers/@Model.Society/@Html.DisplayFor(modelItem => Model.Logo)">
                <p>@Html.DisplayFor(model => model.Logo)</p>
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    <form class="mb-4" asp-action="DeleteCustomer">
        <input asp-for="CustomerID" class="form-control" hidden />
        <button type="submit" class="btn btn-glow" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-trash-alt"></i></button>
        <a class="btn btn-glow ml-2" asp-action="Customers" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
    </form>
