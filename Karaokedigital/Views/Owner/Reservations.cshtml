@model IEnumerable<Karaokedigital.Models.ReservationModel>

@{
    ViewData["Title"] = "Reservations";
}

<h1>Reservations</h1>
@if (@ViewBag.Count > 0)
{
    <button type="button" class="float-left btn btn-info">
        <i class="text-dark fas fa-calendar-alt mr-2"></i> <span class="badge badge-light text-dark">@Html.DisplayFor(modelItem => @Model.First().Date)</span>
        <span class="sr-only">Date</span>
    </button>
}

<p class="mt-4">
    <a class="btn btn-glow" title="Add New" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="CreateReservation"><i class="fas fa-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Social)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="result">
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
                <td>
                    @if (item.Social)
                    {
                        for (int i = 0; i < item.NumberUsers; i++)
                        {

                            <i class="h4 sunset fas fa-microphone-alt"></i>

                        }

                    }
                </td>
                <td colspan="1" class="result-button text-center d-none">
                    <a class="btn btn-glow-circle mr-2" title="Users" data-bs-toggle="tooltip" data-bs-placement="top" href="ReservationUsers?id=@item.ReservationID"><i class="bg-green fas fa-users"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
