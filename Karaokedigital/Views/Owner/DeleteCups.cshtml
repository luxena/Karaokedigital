@model Karaokedigital.Models.CupModel

@{
    ViewData["Title"] = "DeleteCups";
}

<h1>Delete All Cups</h1>

<h3>Are you sure you want to delete all cups?</h3>
<div>
    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "The cups have been deleted")
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />

    <form class="mb-4" asp-action="DeleteCups">
        <button type="submit" class="btn btn-glow" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-trash-alt"></i></button>
        <a class="btn btn-glow ml-2" asp-action="Cups" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
    </form>
</div>
