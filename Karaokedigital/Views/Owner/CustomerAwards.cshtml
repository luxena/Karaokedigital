@model IEnumerable<Karaokedigital.Models.AwardModel>

@{
    ViewData["Title"] = "CustomerAwards";
}

<h1>Award</h1>

<p class="mt-4">
    <a class="btn btn-glow" title="Edit" data-bs-toggle="tooltip" data-bs-placement="top" href="CreateAward?id=@ViewBag.CustomerID"><i class="fas fa-plus"></i></a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Award)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reward)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="pt-2 cursor-pointer" onclick="location.href = 'EditAward?id=@item.AwardID'">
            <td>
                @Html.DisplayFor(modelItem => item.Award)
            </td>
            <td><i class="h3 fas fa-trophy text-@item.Cup.ToLower()"></i></td>
            <td>
                @Html.DisplayFor(modelItem => item.Reward)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a class="btn btn-glow-circle mr-4" title="Edit" data-bs-toggle="tooltip" data-bs-placement="top" href="EditAward?id=@item.AwardID"><i class="bg-info fa-solid fas fa-pencil-alt"></i></a>
                <a class="btn btn-glow-circle mr-4" title="Details" data-bs-toggle="tooltip" data-bs-placement="top" href="DetailsAward?id=@item.AwardID"><i class="bg-beetlejuice fas fa-file-invoice"></i></a>
                <a class="btn btn-glow-circle mr-4" title="Deactivate" data-bs-toggle="tooltip" data-bs-placement="top" href="DeactivateAward?id=@item.AwardID"><i class="bg-warning fas fa-ban"></i></a>
                <a class="btn btn-glow-circle mr-4" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top" href="DeleteAward?id=@item.AwardID"><i class="bg-danger fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
