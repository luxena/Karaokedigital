@model IEnumerable<Karaokedigital.Models.ChartModel>

@{
    ViewData["Title"] = "Chart";
}

<h1>Chart</h1>
<div>
    <a class="btn btn-glow float-right" title="AssignTrophies" data-bs-toggle="tooltip" data-bs-placement="top" href="AssignTrophies?id=@ViewBag.CustomerID"><i class="bg-green fas fa-medal"></i></a>
</div>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                N.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Votation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Votation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
           @* <td>
                        <button type="submit" class="btn btn-glow" title="AssignTrophy" data-bs-toggle="tooltip" data-bs-placement="top">
                            @if (item.Number < 6)
                            {
                                <i class="bg-@item.Number fas fa-trophy"></i>
                            }
                        </button>
               
            </td>*@
        </tr>               
}
    </tbody>
</table>
</div>


