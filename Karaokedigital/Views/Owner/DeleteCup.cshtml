@model Karaokedigital.Models.CupModel

@{
    ViewData["Title"] = "DeleteCup";
}

<h1>Delete Cup</h1>

<h3>Are you sure you want to delete this Cup?</h3>
<div>
    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "The cup has been deleted")
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }

    }

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CupID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CupID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cup)
        </dd>
    </dl>
    <form class="mb-4" asp-action="DeleteCup">
        <input asp-for="CupID" class="form-control" hidden />
        <button type="submit" class="btn btn-glow" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-trash-alt"></i></button>
        <a class="btn btn-glow ml-2" asp-action="Cups" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
    </form>
</div>
