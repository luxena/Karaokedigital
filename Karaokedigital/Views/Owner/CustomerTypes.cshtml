@model IEnumerable<Karaokedigital.Models.CustomerTypeModel>

@{
    ViewData["Title"] = "CustomerTypes";
}

<h1>CustomerTypes</h1>

<p class="mt-4">
    <a class="btn btn-glow" title="Add New" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="CreateCustomerType"><i class="fas fa-plus"></i></a>
</p>
<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="result pt-2 cursor-pointer" onclick="location.href = 'EditCustomerType?id=@item.CustomerTypeID'">
            <td>
                @Html.DisplayFor(modelItem => item.CustomerTypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td colspan="3" class="result-button text-center d-none">
                <a class="btn btn-glow-circle mr-4" title="Edit" data-bs-toggle="tooltip" data-bs-placement="top" href="EditCustomerType?id=@item.CustomerTypeID"><i class="bg-info fa-solid fas fa-pencil-alt"></i></a>
                <a class="btn btn-glow-circle mr-4" title="Details" data-bs-toggle="tooltip" data-bs-placement="top" href="DetailsCustomerType?id=@item.CustomerTypeID"><i class="bg-beetlejuice fas fa-file-invoice"></i></a>
                <a class="btn btn-glow-circle mr-4" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top" href="DeleteCustomerType?id=@item.CustomerTypeID"><i class="bg-danger fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
