@model Karaokedigital.Models.AwardModel

@{
    ViewData["Title"] = "DeleteAward";
}

<h1>DeleteAward</h1>

<h3>Are you sure you want to delete this Award?</h3>
<div>
    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "Award not exists")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwardID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AwardID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Award)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Award)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cup)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cup)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reward)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reward)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    
    <form asp-action="DeleteAward">
        <input asp-for="AwardID" class="form-control" hidden />
        <button type="submit" class="btn btn-glow" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-trash-alt"></i></button>
        @if (@Model == null)
        {
            <a class="btn btn-glow ml-2" href="CustomerAwards?id=@ViewBag.CustomerID" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
        }
        else
        {
            <a class="btn btn-glow ml-2" href="CustomerAwards?id=@Model.CustomerID" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
        }
        
    </form>
</div>
