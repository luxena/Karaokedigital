 @model Karaokedigital.Models.CustomerTypeModel

@{
    ViewData["Title"] = "DeleteCustomerType";
}

<h1>Delete CustomerType</h1>

<h3>Are you sure you want to delete this Customer Type?</h3>
<div>

    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "Customer Types not exists")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerTypeID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerTypeID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
    <form class="mb-4" asp-action="DeleteCustomerType">
        <input asp-for="CustomerTypeID" class="form-control" hidden />
        <button type="submit" class="btn btn-glow" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-trash-alt"></i></button>
        <a class="btn btn-glow ml-2" asp-action="CustomerTypes" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
    </form>
</div>
