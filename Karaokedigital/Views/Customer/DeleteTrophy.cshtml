@model Karaokedigital.Models.TrophyModel

@{
    ViewData["Title"] = "DeleteTrophy";
}

<div>
    <partial name="NavBar" />
</div>

<h1>Delete Trophy</h1>

<h3>Are you sure you want to delete this Trophy?</h3>
<div>
    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "Trophy not exists")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Award)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Award)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reward)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reward)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cup)
        </dt>
        <dd class="col-sm-10">
            @if (@Model != null)
            {
                <i class="h3 fas fa-trophy text-@Model.Cup.ToLower()"></i>
            }
            @Html.DisplayFor(model => model.Cup)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
        @if (@Model != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserImg)
            </dt>
            <dd class="col-sm-10">
                <img class="rounded-circle" alt="@Html.DisplayFor(modelItem => modelItem.User)" width="60" height="60" src="~/Images/Users/@Model.User/@Html.DisplayFor(modelItem => @Model.UserImg)">
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WinDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WinDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Consumed)
        </dt>
        <dd class="col-sm-10">
            @if (Model != null)
            {
                @if (@Model.Consumed)
                {
                    <i class="h2 text-success fas fa-check"></i>
                }
            }
        </dd>
    </dl>
    @if (Model != null)
    {
        <form class="mb-4" method="post" asp-action="DeleteTrophy" asp-route-id="@Model.TrophyID" asp-route-customerID="@ViewBag.CustomerModel.CustomerID" asp-route-customerUserID="@ViewBag.Model.CustomerUserID">
            <button type="submit" class="btn btn-glow" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-trash-alt"></i></button>
            <a class="btn btn-glow ml-2" asp-action="Trophies" asp-route-customerID="@ViewBag.CustomerModel.CustomerID" asp-route-customerUserID="@ViewBag.Model.CustomerUserID" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
        </form>
    }
    else
    {
        <a class="btn btn-glow ml-2" asp-action="Trophies" asp-route-customerID="@ViewBag.CustomerModel.CustomerID" asp-route-customerUserID="@ViewBag.Model.CustomerUserID" title="List" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
    }
</div>
