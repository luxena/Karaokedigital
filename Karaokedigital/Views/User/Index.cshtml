@model Karaokedigital.Models.UserModel

@{
    ViewData["Title"] = "Index";
}


<style>
	.img-profile{
		background-color: #fff;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
	}

	.container-fluid {
		width:100%!important;
	}

    .card {
        <!-- width: 280px; -->
       /* padding: 5px;*/
        border: none;
        cursor:pointer;
    }

    .card-img {
       
        overflow: hidden;
        position: relative;
        display: inline-block;
        vertical-align: top;
        border: 5px solid #fff;
        box-shadow: 0 0 5px #ddd;
        border-radius: 2px;
    }

    .card-img-filter {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        text-align: center;
        font-weight: bold;
        width: 100%;
        height: 100%;
        display: table;
    }

    .card-title{
        padding:30%!important;
    }

       

        .card-img-filter:hover {
            background: rgba(255,255,255,0.3) !important;
        }

            /*.card-img-filter:hover div {
                opacity: 1;
                top: 0;
            }*/

    .row > * {
        padding-right: 0 !important;
        padding-left: 0!important;
    }

    .container{
        margin: 0px !important;
        padding: 0px !important;
    }

</style>


<div>
	<partial name="NavBar" model="@Model"/>
</div>


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 mt-4 mb-4">
    <a asp-action="Edit" asp-route-UserID="@Model.UserID">
        <div class="card">
        <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/profile.jpeg" alt="profile" width="250" height="250">
        <div class="card-img-filter">
            <div></div>
            <h5 class="card-title text-light">PROFILE</h5>
        </div>
        </div>
    </a>
    <a asp-action="Locations" asp-route-id="@Model.UserID">
        <div class="card">
        <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/gps.jpg" alt="locations" width="300" height="250">
        <div class="card-img-filter">
            <div></div>
            <h5 class="card-title text-light">LOCATIONS</h5>
        </div>
    </div>
    </a>
    <a asp-action="Tracks" asp-route-userID="@Model.UserID">
        <div class="card">
        <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/tracks.jpg" alt="tracks" width="300" height="250">
        <div class="card-img-filter card-body">
            <div></div>
            <h5 class="card-title text-light">TRACKS</h5>
        </div> 
    </div>
    </a>
    <a asp-action="Reservations" asp-route-userID="@Model.UserID">
        <div class="card">
        <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/reservation.jpg" alt="reservations" width="300" height="250">
        <div class="card-img-filter card-body">
             <div></div>
            <h5 class="card-title text-light">MY RESERVATIONS</h5>
        </div>
    </div>
    </a>
    <a asp-action="Trophies" asp-route-userID="@Model.UserID">
        <div class="card">
        <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/trophies.jpg" alt="trophies" width="300" height="250">
        <div class="card-img-filter card-body">
             <div></div>
            <h5 class="card-title text-light">TROPHIES</h5>
        </div>
    </div>
    </a>
    <a asp-action="MyVotation" asp-route-userID="@Model.UserID" asp-route-customerID="@ViewBag.CustomerID">
        <div class="card">
        <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/votations.jpg" alt="votations" width="300" height="250">
        <div class="card-img-filter card-body">
            <div></div>
            <h5 class="card-title text-light">VOTATIONS</h5>
        </div>
    </div>
    </a>
    <a asp-action="Chart" asp-route-customerID="@ViewBag.CustomerID" asp-route-userID="@Model.UserID">
        <div class="card">
        <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/graphics.jpg" alt="chart" width="300" height="250">
        <div class="card-img-filter card-body">
             <div></div>
            <h5 class="card-title text-light">CHART</h5>
        </div>
        </div>
    </a>
    <a asp-action="CustomerReservations" asp-route-userID="@Model.UserID" asp-route-customerID="@ViewBag.CustomerID">
        <div class="card">
            <img class="card-img card-img-top cursor-pointer" src="~/Img/Cards/allreservations.jpg" alt="chart" width="300" height="250">
            <div class="card-img-filter card-body">
                <div></div>
                <h5 class="card-title text-light">ALL RESERVATIONS</h5>
            </div>
        </div>
    </a>
</div>
