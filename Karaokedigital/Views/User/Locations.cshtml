@model IEnumerable<Karaokedigital.Models.UserCustomerModel>

@{
    ViewData["Title"] = "Locations";
}
<div>
    <partial name="NavBar" model="@ViewBag.Model" />
</div>
<h1>Locations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Society)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="result pt-2 cursor-pointer">
            <td>
                @Html.DisplayFor(modelItem => item.Society)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td colspan="4" class="result-button text-center d-none">
                    <a class="btn btn-glow-circle" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="DeleteLocation" asp-route-id="@item.UserCustomerID"><i class="bg-danger fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
