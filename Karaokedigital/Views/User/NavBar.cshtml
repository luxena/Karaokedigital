@model Karaokedigital.Models.UserModel
<nav class="navbar navbar-expand navbar-toggleable navbar-light bg-white border-bottom box-shadow mb-0">
	<div class="container-fluid">
		<form asp-action="Index" method="get">
			<input name="id" value="@Model.UserID" class="form-control" hidden />
			<button class="border-0 bg-none mr-3" type="submit" title="home" data-bs-toggle="tooltip" data-bs-placement="left"><img class="cursor-pointer logo" src="~/Img/Logo/mic.jpg" alt="microphone" width="50" height="50"></button>
		</form>
		
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="navbar-collapse collapse d-sm-inline-flex">
			<ul class="navbar-nav mr-auto">
				@if (@ViewBag.LastLocal != null)
				{
				
			    <li class="nav-item active"><a class="btn btn-glow btn-menu" title="Tracks" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="Tracks" asp-route-userID="@Model.UserID"><i class="bg-green fas fa-music"></i></a></li>
				<li class="nav-item"><a class="btn btn-glow btn-menu" title="Reservations" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="Reservations" asp-route-userID="@Model.UserID"><i class="bg-lilla fas fa-microphone-alt"></i></a></li>
				<li class="nav-item"><a class="btn btn-glow btn-menu" title="CustomerReservations" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="CustomerReservations" asp-route-userID="@Model.UserID" asp-route-customerID="@ViewBag.CustomerID"><i class="bg-beetlejuice fas fa-clipboard-list"></i></a></li>
				<li class="nav-item"><a class="btn btn-glow btn-menu" title="Chart" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="Chart" asp-route-customerID="@ViewBag.CustomerID" asp-route-userID="@Model.UserID"><i class="bg-info fas fa-chart-line"></i></a></li>
				<li class="nav-item"><a class="btn btn-glow btn-menu" title="Trophies" data-bs-toggle="tooltip" data-bs-placement="top" href=""><i class="bg-gold fas fa-trophy"></i></a></li>
				<li class="nav-item"><a class="btn btn-glow btn-menu" title="Locations" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="Locations" asp-route-id="@Model.UserID"><i class="fas fa-cocktail"></i></a></li>
				<li class="nav-item">
						<form asp-action="AddLocation" method="get">
							<input asp-for="UserID" class="form-control" hidden />
							<button type="submit" class="btn btn-glow btn-menu" title="AddLocation" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-plus"></i></button>
						</form>
				</li>
				<li class="nav-item"><a class="btn btn-glow btn-menu" title="MyVotation" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="MyVotation" asp-route-userID="@Model.UserID" asp-route-customerID="@ViewBag.CustomerID"><i class="bg-beetlejuice fas fa-sort-numeric-up"></i></a></li>
				<li class="nav-item"><a class="btn btn-glow btn-menu" title="Qr" data-bs-toggle="tooltip" data-bs-placement="top" href=""><i class="bg-beetlejuice fas fa-qrcode"></i></a></li>
				
				}
				else
				{
					<form asp-action="AddLocation" method="get">
						<input asp-for="UserID" class="form-control" hidden />
						<button type="submit" class="btn btn-glow" title="AddLocation" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-plus"></i></button>
					</form>
				}
			</ul>
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">
					<div class="top-container">
						<form asp-action="Edit" method="get">
							<input asp-for="UserID" class="form-control" hidden />
							<button class="border-0 bg-none" type="submit" title="@Model.Username" data-bs-toggle="tooltip" data-bs-placement="left"><img alt="@Model.Username" class="rounded-circle cursor-pointer img-profile" width="60" height="60" src="~/Images/Users/@Model.Username/@Html.DisplayFor(modelItem => Model.Img)" class="img-fluid profile-image"></button>
						</form>
					</div>
				</li>
			</ul>
		</div>
	</div>
</nav>