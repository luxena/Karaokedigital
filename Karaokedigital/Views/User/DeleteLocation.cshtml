@model Karaokedigital.Models.UserCustomerModel

@{
    ViewData["Title"] = "DeleteLocation";
}
<div>
    <partial name="NavBar" model="@ViewBag.Model" />
</div>
<h1>Delete Location</h1>

<h3>Are you sure you want to delete this Location?</h3>
<div>

    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response != "Location has been deleted")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />
    <dl class="row">
      
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Society)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Society)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Province)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Province)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>

    @if (@Model != null)
    {
          <form class="mb-4" asp-controller="User" asp-action="DeleteLocation" method="post" asp-route-UserCustomerID="@Model.UserCustomerID">
        
        <button type="submit" class="btn btn-glow" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="fas fa-trash-alt"></i></button>
        <a class="btn btn-glow ml-2" asp-action="Locations" asp-route-id="@ViewBag.Model.UserID" title="Locations" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
        </form>
   } 
   else
   {
        <a class="btn btn-glow" asp-action="Locations" asp-route-id="@ViewBag.Model.UserID" title="Locations" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
   }
      
</div>
