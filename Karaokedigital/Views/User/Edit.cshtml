@model Karaokedigital.Models.UserModel

@{
    ViewData["Title"] = "Edit";
}
<div>
    <partial name="NavBar" model="@ViewBag.Model" />
</div>
<h1>Profile</h1>
@if (!string.IsNullOrEmpty(@ViewBag.Response))
{
    @if (@ViewBag.Response == "User already exists")
    {
                <div class="alert alert-danger" role="alert">
            @ViewBag.Response
                </div>
    }
    else
    {
                <div class="alert alert-info" role="alert">
            @ViewBag.Response
                </div>
    }
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="User" asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" readonly />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="ImgFile" class="control-label">Foto</label>
            </div>
            <div class="input-group mb-3">
                <input type="file" name="ImgFile" class="form-control d-none" id="ImgFile">
                <label class="" for="ImgFile"><img class="rounded-circle cursor-pointer" alt="@Html.DisplayFor(modelItem => Model.Username)" width="60" height="60" src="~/Images/Users/@Model.Username/@Html.DisplayFor(modelItem => Model.Img)"></label>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                @*<input asp-for="Password" class="form-control"/>*@

                @Html.PasswordFor(modelItem => modelItem.Password, new { value = Model.Password,@class = "form-control" })

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check d-none">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group mt-2 float-left d-block">
                <button type="submit" class="btn btn-glow" title="Save" data-bs-toggle="tooltip" data-bs-placement="top"><i class="far fa-save"></i></button>
            </div>
        </form>
        <form method="post" asp-controller="User" asp-action="Deactivate">
            <div class="form-group mt-2 float-left d-block" style="float:left; display:block;">
                <input asp-for="UserID" class="form-control" hidden />
                <button type="submit" class="btn btn-glow ml-2" title="Deactivate" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-warning fas fa-ban"></i></button>
            </div>
        </form>
        <form method="post" asp-controller="User" asp-action="Delete">
            <div class="form-group mt-2 float-left d-block" style="float:left; display:block;">
                <input asp-for="UserID" class="form-control" hidden />
                <button type="submit" class="btn btn-glow ml-2" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-danger fas fa-trash-alt"></i></button>
            </div>
        </form>
    </div>
</div>
