@model IEnumerable<Karaokedigital.Models.ReservationModel>

<div>
    <partial name="NavBar" model="@ViewBag.Model" />
</div>

@if (!string.IsNullOrEmpty(@ViewBag.Response))
{
    @if (@ViewBag.Response != "Reservation has been created" && @ViewBag.Response != "Reservation has been deleted" && @ViewBag.Response != "ReservationUser has been inserted")
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Response
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            @ViewBag.Response
        </div>
    }

}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberUsers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Social)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Votation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="result pt-2 cursor-pointer">
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberUsers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                 @if (item.Social)
                 {
                     <i class="h2 text-success fas fa-check"></i>
                 }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Votation)
            </td>
            @if (item.State == "Reserved")
                {
                    <td colspan="4" class="result-button text-center d-none">
                        <a class="btn btn-glow-circle" title="Delete" data-bs-toggle="tooltip" data-bs-placement="top" asp-action="DeleteReservation" asp-route-reservationID="@item.ReservationID" asp-route-userID="@ViewBag.Model.UserID" asp-route-customerID="@ViewBag.CustomerID"><i class="bg-danger fas fa-trash-alt"></i></a>
                    </td>
                }
             
        </tr>
}
    </tbody>
</table>
