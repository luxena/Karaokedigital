@model Karaokedigital.Models.UserCustomerModel

<div>
    <partial name="NavBar" model="@ViewBag.Model" />
</div>

@if (!string.IsNullOrEmpty(@ViewBag.Response))
{
    @if (@ViewBag.Response == "Location already exists")
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Response
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            @ViewBag.Response
        </div>
    }

}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Society" class="control-label"></label>
                <input asp-for="Society" class="form-control" />
                <span asp-validation-for="Society" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input name="UserID" value="@ViewBag.Model.UserID" class="form-control" hidden />
                <button type="submit" class="btn btn-glow" title="Save" data-bs-toggle="tooltip" data-bs-placement="top"><i class="far fa-save"></i></button>
                <a class="btn btn-glow ml-2" href="Locations?id=@ViewBag.Model.UserID" title="Locations" data-bs-toggle="tooltip" data-bs-placement="top"><i class="bg-sky far fa-list-alt"></i></a>
            </div>
        </form>
    </div>
</div>


