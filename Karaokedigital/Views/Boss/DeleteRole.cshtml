@model Karaokedigital.Models.RoleModel

@{
    ViewData["Title"] = "DeleteRole";
}

<h1>Delete Role</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "The role not exists")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }

    }

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>

    <form asp-action="DeleteRole">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Roles">Back to List</a>
    </form>
</div>
