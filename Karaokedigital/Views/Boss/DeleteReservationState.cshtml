@model Karaokedigital.Models.ReservationStateModel

@{
    ViewData["Title"] = "DeleteReservationState";
}

<h1>DeleteReservationState</h1>

<h3>Are you sure you want to delete this Reservation State?</h3>
<div>
    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "The Reservation State not exists")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationStateID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationStateID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
    </dl>

    <form asp-action="DeleteReservationState">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="ReservationStates">Back to List</a>
    </form>
</div>
