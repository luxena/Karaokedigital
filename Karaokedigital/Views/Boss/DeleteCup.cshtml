@model Karaokedigital.Models.CupModel

@{
    ViewData["Title"] = "DeleteCup";
}

<h1>Delete Cup</h1>

<h3>Are you sure you want to delete this Cup?</h3>
<div>
    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "The cup has been deleted")
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }

    }

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CupID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CupID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cup)
        </dd>
    </dl>

    <form asp-action="DeleteCup">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Cups">Back to List</a>
    </form>
</div>
