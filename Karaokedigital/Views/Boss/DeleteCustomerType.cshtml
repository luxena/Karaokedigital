@model Karaokedigital.Models.CustomerTypeModel

@{
    ViewData["Title"] = "DeleteCustomerType";
}

<h1>Delete CustomerType</h1>

<h3>Are you sure you want to delete this Customer Type?</h3>
<div>

    @if (!string.IsNullOrEmpty(@ViewBag.Response))
    {
        @if (@ViewBag.Response == "Customer Types not exists")
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Response
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                @ViewBag.Response
            </div>
        }

    }
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerTypeID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerTypeID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>

    <form asp-action="DeleteCustomerType">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-action="CustomerTypes">Back to List</a>
    </form>
</div>
